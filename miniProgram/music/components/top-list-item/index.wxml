<!--components/top-list-item/index.wxml-->
<wxs src="../../utils/format.wxs" module="format"></wxs>

<view class="top-list-wrapper">
  <view class="left">
    <view class="title">{{item.name}}</view>
    <block wx:for="{{item.playlist}}" wx:key="id">
      <view class="playlist">{{index + 1}}. {{item.al.name}} - <text class="artist">{{item.ar[0].name}}</text></view>
    </block>
  </view>
  <view class="right">
    <image src="{{item.coverImgUrl}}" mode="widthFix"></image>
    <view class="playCount">{{format.formatCount(item.playCount)}}</view>
  </view>
</view>
