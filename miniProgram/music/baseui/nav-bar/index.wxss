/* baseui/nav-bar/index.wxss */
.nav-bar-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.nav-bar-wrapper .left,
.nav-bar-wrapper .right {
  width: 100rpx;
}

.left .default-slot:empty + .left-arrow {
  display: block;
}

.left .left-arrow {
  display: none;
}

.left .left-arrow .icon {
  width: 45rpx;
  margin-left: 20rpx;
}

.nav-bar-wrapper .content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}